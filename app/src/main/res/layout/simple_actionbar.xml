<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/actionBar_leftButton"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_action_bar_subtitle_text_size"
        android:background="@drawable/top_back_select"
        android:text="@string/actionbar_left" />

    <TextView
        android:id="@+id/actionBar_title"
        android:layout_weight="1.0"
        android:layout_width="0dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/actionBar_rightButton"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_action_bar_subtitle_text_size"
        android:layout_gravity="center"
        android:background="@drawable/top_home_select"/>

</LinearLayout>
